    <div class="container">

      <!-- Main hero unit for a primary marketing message or call to action -->
      <div class="hero-unit-smaller">
      	<% subtheme = Subtheme.find(params[:id]) %>
        <h1><%= subtheme.name %></h1>
        <p><%= subtheme.name_english %></p>

        <p>View the 
        	<%= link_to 'flashcards', @subtheme.pdf_flashcards %>, 
        	<%= link_to 'worksheets', @subtheme.pdf_worksheet %>, or select a word</p>
        <p>
        	<ul>
          	<% @subtheme.words.each do |w| %>
            	<div style="display:inline-block;width:110px;">
              	<div style="width:100px;text-align:center;margin-left:10px;">
                	<%= link_to word_path(w) do %>
                    <%= w.name_english %>
                    <br/><span style="font-size:11px"><%= w.name %></span></div>
                    <%= image_tag w.image, width: '100' %>
                  <% end %>
            	</div>
          	<% end %>
        	</ul>
        </p>
      </div>

    </div>

